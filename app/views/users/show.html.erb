<%cache 'user_edit'+current_user.updated_at.to_s , expires_in: 1.hours do%>
<div class="px-3 py-3 clr_sub_b" style="height:85%">
<div class = 'card clr_font_bd'>
    <div class="card-body m-0">
        <%= form_with(model: @user, local: true,class:'mb-3')do |f| %>
            <div class="form-group">
                <%= f.label :name, 'ユーザーネーム',class:'mb-2'%>
                <%= f.text_field :name, class: 'form-control form-control-sm'%>
            </div>
            <div class="form-group">
                <%= f.label :email, 'メールアドレス',class:'mb-2' %>
                <%= f.text_field :email, class:'form-control form-control-sm' %>
            </div>
            <div class="form-group">
                <%= f.label :theme, 'カラーテーマ', class:'mb-2'%>
                <%= f.select :theme, [["ラムネ", 'sodapop'],["メロンソーダ", 'melon'],["ショートケーキ",'cake'],["モノクロ", 'mono']],{},class: 'form-control form-control-sm'%>
            </div>
            <%= f.submit 'OK' , class: 'btn w-100 btn-sm clr_main_b clr_sub_c' %>
        <%end%>
        <div class="w-100 clr_point_l"></div>
        <div class="mt-3"><%= link_to destroy_user_session_path, method: :delete ,class:'btn clr_sub_c w-100',style:'background-color:#cc7a7a' do%>ログアウト <i class="fas fa-sign-in-alt"></i><%end%></div>
    </div>
</div> 
</div>
<%end%>
