<div class = 'card mt-1 clr_font_bd'>
    <div class="card-body m-0">
        <%= form_with(model: @user, local: true,class:'mb-3')do |f| %>
            <div class="form-group">
                <%= f.label :name, 'ユーザーネーム',class:'mb-2'%>
                <%= f.text_field :name, class: 'form-control form-control-sm'%>
            </div>
            <div class="form-group">
                <%= f.label :email, 'メールアドレス',class:'mb-2' %>
                <%= f.text_field :email, class:'form-control form-control-sm' %>
            </div>
            <div class="form-group">
                <%= f.label :theme, 'カラーテーマ', class:'mb-2'%>
                <%= f.select :theme, [["ラムネ", 'sodapop'],["メロンソーダ", 'melon'],["ショートケーキ",'cake'],["モノクロ", 'mono']],{},class: 'form-control form-control-sm'%>
            </div>
            <div class="text-right">
                <%= f.submit 'OK' , class: 'btn ml-2 btn-sm clr_sub_b clr_font_c clr_font_bd' %>
            </div>            
        <%end%>

        <div class="w-100 clr_point_l"></div>

        <div class="mt-3">
            <%= link_to  logout_path, method: :delete  do%>ログアウト <i class="fas fa-sign-in-alt"></i><%end%>
        </div>
    </div>
</div> 


