<div class="card mt-2">
    <div class="card-body">
        <h1 class="title" style="font-size:20px">ものをしまう</h1>
        <div style="border-bottom: 2px dotted #e6e6e6"></div>
        </br>
        
        <%= form_with(model: @thing, local: true)do |f| %>
        <div class="form-group">
            <%= f.label :list_id, 'お部屋' %>
            <%= f.collection_select :list_id, List.all,:id,:name, class: 'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :content, 'もの' %>
            <%= f.text_field :content, class: 'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :deadline, '消費 / 賞味期限' %>
            </br>
            <%= f.date_select :deadline, class: 'form-control'%>
        </div>
        <div class="form-group">
            <%= f.label :tag_id, 'タグ' %>
            </br>
            <%= f.collection_select :tag_id, Tag.all,:id,:name,class: 'form-control'%>
        </div>
        
        <div class="form-group">
            <%= f.label :quantity, '個数' %>
            <%= f.number_field :quantity, class: 'form-control', size: '5x5' %>
        </div>
        
        <%= f.submit '追加' , class: 'btn btn-success ml-2' %>
        <%end%>
     </div>
</div>


