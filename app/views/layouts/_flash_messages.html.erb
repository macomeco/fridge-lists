<% flash.each do |message_type, message| %>
  <%if message_type == 'notice' then %>
    <% message_type = 'success'%>
  <%elsif message_type == 'alert' then%>
    <% message_type = 'error'%>
  <%end%>
    <script>
      toastr['<%= message_type %>']('<%= message %>','<%= message_type.upcase %>');
    </script>
<% end %>
