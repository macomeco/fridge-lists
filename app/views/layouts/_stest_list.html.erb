<div class="A" style="height:100%;width:100%">
    <div class="aaa a">子供1</div>
    <div class="aaa c">子供1</div>
    
    <div class="aaa b">わんわんわんわんわんわんわんわんわんわん</div>
</div>
<style>
    .aaa{
        word-wrap: break-word;
        width:100px;
        
        height:50px;
        background-color:pink;
        overflow-y:scroll;
        transition: 0.4s ease-in-out ;

    }
    .b{
        position:absolute;
        bottom:0%;
    }
</style>
<script>
$('.c').hide();
$(function(){
    $('.a').on('click',function(){

        if($('.c').css('display')=='block'){
            $('.b').css('height',$('.A').height()-$('.a').height());
            $('.c').slideUp('normal');

        }else{
            $('.b').css('height',$('.A').height()-$('.a').height()-$('.c').height());
            $('.c').show();
        }
    });
});

</script>