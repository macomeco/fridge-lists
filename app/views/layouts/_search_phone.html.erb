<div class="p-0 col-md-3 col-12  w-100 search-list clr_font_c" >
    <!-- リスト名 -->
    <div class='card clr_font_bd w-100'>
        <div class="row no-gutters search-main">
            <div class="col-1"><div class= 'w-100 h-100 clr_main_b'></div></div>
            <div class="col-9">
                <div class="card-body mx-auto h-100"><h1 style="font-size:20px;margin:0">検索</h1></div>
            </div>
            <div class="col-1">
                <div class="h-100 d-flex align-items-center">
                    <div class="search-btn text-center w-100">
                        <div class= 'clr_main_c w-100 text-center btn btn-link p-0 '><i class="fas fa-search "></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row no-gutters search-form" style="display:none">
            <div class="col-1"><div class= 'w-100 h-100 clr_main_b'></div></div>
            <div class="col-11">
                <div class="card-body">
                    <%= form_with(url: root_path(:search),method: :get,local: true)do |f|%>
                        <div class="input-group">
                            <%= f.text_field :search, {class: 'form-control form-control-sm',placeholder:"キーワードを入力してね"}%>
                            <span class="input-group-append"><%= f.submit '検索' , {class: 'btn btn-sm clr_main_b clr_sub_c'} %></span>
                        </div>
                        <small class="text-muted">タグのみの検索 : 先頭に'#'</small>
                    <%end%>
                </div>
            </div>
        </div> 
    </div>
<!-- 中身 -->
    <div class="pt-5 list-card search-tngs">
        <div class="w-100">
            <%unless @search_things == nil then %>
                <% @no = @search_things.size %>
                <% @clr_flag == 'search' %>
                <%= render partial: 'things/tng' , collection: search_things, as: 'tng',locals:{lists: lists,tags: tags}%>
            <%end%>
        </div>
    </div>
</div>