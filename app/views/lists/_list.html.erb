<% lists.each do |list|%>
<div class="col-3 p-0" id="list_col" style="background-color:beige;border-left: 1px solid">
    
    
    
    <!-- リスト名 -->
    <div class="card bg-light m-2" style="width:95%">
        <div class="row no-gutters">
            <div class="col-md-1"><div style="background-color:#89c997;width:100%;height:100%"></div></div>
            
            <div class="col-md-11">
                <div class="card-body mx-auto">
                    <h1 style="font-size:20px"><%= list.name%></h1>
                </div>
            </div>
        </div>
    </div>

    <%= link_to '登録順', sort: 'created_at'%>
    <%= link_to '日付順', sort: 'deadline'%>

    <!-- 並び替え -->
    <%= form_with(url: root_path(:sort), method: :get, local: true, class:'form_sort')do |f|%>
    <%= f.select :sort, [['近い順', 'deadline'],['登録順', 'created_at'],['近い順', 'deadline']] ,{},{class: 'form-control select_sort'}%>
    <%= f.submit 'yojo', id:'submit_select'%>
    <%end%>


    <!-- 中身 -->
    <div class="" id="list-card" style="display:flex;overflow-y:auto;">
        <div class="mx-auto p-1" style="width:95%;">
            <%= render 'things/things' , things: @things , list_id: list.id %>
        </div>
    </div>
    
</div>
<% end %>

<style>
    #list-card{
        margin-top: auto;
        margin-bottom: auto;
        height: 84vh;
    }   
</style>
<script>
    $(".select_sort").change(function(){
        //console.log('わあああ');
        var select_sort = $(this).val();
        console.log(select_sort);
        //$(" #submit_select").click();
        $(".form_sort").submit();
    });
</script>