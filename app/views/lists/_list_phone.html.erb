<% @listid = list.id%>
<div class="col-md-3 p-0 pb-3 col-12 w-100 clr_font_c list_<%=@listid%>">
<!-- リスト名 -->
    <div class='card clr_font_bd list-p-flag' style='width:100%;'>
        <div class="row no-gutters">
            <div class="col-1">
                <div class="w-100 h-100 clr_list_i_b"></div>
            </div>
            <div class="col-8">
                <div class="card-body mx-auto h-100 pr-0"><h1 class="list_no_<%= @listid%>" style="font-size:20px;margin:0"><%= list.name %></h1></div>
            </div>
            <div class="col-1">
                <div class="text-center card-body mx-auto px-0">
                    <a style="font-size:16px;color:#808080;" class="tng_size_<%= @listid%>"><%= @no = current_user.things.where(list_id: list.id).to_a.size %></a>
                </div>
            </div>
            <div class="col-1">
                <div class="text-right card-body mx-auto px-0">
                    <div class="w-100 text-center btn btn-link p-0 clr_list_i_c list-down">
                        <i class="fas fa-caret-down fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- 中身 -->
    <div class="mt-0 mx-auto list-card list-p" style="width:100%;display:none">
        <div class="w-100 mt-3 list_no_<%= @listid %>_tng"><%= render partial: 'things/tng' , collection: @things.where(list_id: list.id), as: 'tng', locals:{lists: lists,tags: tags}%></div>
    </div>
</div>