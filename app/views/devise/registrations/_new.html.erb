<div class="card">
  <div class="card-body">
    <h1 style="font-size:20px;">新規登録</h1>
    
     <div style="border-bottom: 2px dotted #e6e6e6"></div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field my-2">
        <%= f.label :name ,'ユーザーネーム',class:'mb-2'%>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:'form-control' %>
      </div>
    
      <div class="field my-2">
        <%= f.label :email ,'メールアドレス'%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>
      </div>
    
      <div class="field my-2">
        <%= f.label :password,'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
      </div>
    
      <div class="field my-2">
        <%= f.label :password_confirmation,'パスワード：確認用' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
      </div>
      
      <div class="field my-2">
        <%= f.label :theme, 'カラーテーマ', class:'mb-2'%>
        <%= f.select :theme, [["ラムネ", 'sodapop'],["メロンソーダ", 'melon'],["ショートケーキ",'cake'],["モノクロ", 'mono']],{},class: 'form-control'%>
      </div>
    
      <div class="actions pt-2">
        <%= f.submit "新規登録", class: 'btn btn-success btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
