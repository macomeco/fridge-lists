<div class="card">
  <div class="card-body">
    <h1 style="font-size:20px;">パスワードの再設定</h1>

    <div style="border-bottom: 2px dotted #e6e6e6"></div>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field my-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit "送信" , class: 'btn btn-success btn-block'%>
      </div>
    <% end %>
  </div>
</div>
<div class="text-right">
    <div class="btn btn-link login-btn">ログイン</div>
    <div class="btn btn-link signup-btn">新規登録</div>
</div>

