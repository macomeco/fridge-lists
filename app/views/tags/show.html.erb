<%= form_with(model: @tag, local: true,class:'mb-3')do |f| %>
    <div class="form-group">
        <%= f.label :name, 'タグの新規登録',class:' mb-2' %>
        <%= f.text_field :name, class: 'form-control form-control-sm'%>
    </div>
    <div class="text-right">
        <%= f.submit '追加' , class: 'btn btn-sm clr_sub_b clr_font_c clr_font_bd' %>
    </div>
<%end%>

<div class='card mt-1 clr_font_bd'>
    <div class="card-body">

        <div class="w-100 clr_point_l"></div>
        <div class="mt-3">
        <p class="mb-2">タグ一覧</p>
        <div class="card" style="height:155px">
            <div class="card-body px-2 py-0" style="overflow-y:auto">
                <div class="">
                <% @tags.each do |tag|%>
                    <%cache tag ,expires_in: 1.hours do%>
                    <div class="tag-flag row no-gutters mx-1 d-flex align-items-center" style="height:30px">
                        <div class="col-2 w-100 "><%= link_to tag , :method => :delete, data:{ confirm: tag.name+'を削除しますか？'},class: 'clr_point_c' do %><i class="fa fa-times"></i><% end %></div>
                        <div class="col-8 w-100"><div class="text-left"><%= tag.name%></div></div>
                        <div class="col-2 w-100"><div class="text-right"><div class= 'tag-edit clr_point_c text-right btn btn-link p-0'><i class="fas fa-pen fa-sm"></i></div></div></div>
                    </div>
                    <div class="tag-edit-form mb-1">
                    <div class=" row no-gutters d-flex align-items-center my-0" style="height:30px">
                        <div class="col-12">
                            <%= form_with(model: tag, local: true)do |f| %>
                                <div class="input-group">
                                    <%= f.text_field :name, class: 'form-control form-control-sm'%>
                                    <span class="input-group-append">
                                        <%= f.submit 'OK' , class: 'btn btn-sm clr_sub_b clr_font_c clr_font_bd' %>
                                    </span>
                                </div>
                            <%end%>
                        </div>
                    </div>
                    </div>
                <%end%>
                <%end%>
                </div>    
            </div>
        </div>
        
        </div>
    </div>
</div>

<script>
$('.tag-edit-form').hide();
</script>
