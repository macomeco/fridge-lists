<div class='card mt-1 clr_font_bd'>
    <div class="card-body">
        <div class="tag-add-form">
            <% cache 'tag_form_p' ,expires_in: 1.hours do %>
                <%= form_with(model: @tag, class:'mb-3')do |f| %>
                    <div class="form-group">
                        <%= f.label :name, 'タグの新規登録',class:' mb-2' %>
                        <%= f.text_field :name, autocomplete: 'off',class: 'form-control form-control-sm tag-field'%>
                    </div>
                    <div class="text-right"><%= f.submit '追加' , class: 'btn btn-sm clr_sub_b clr_font_c clr_font_bd sub_s_btn' %></div>
                <%end%>
            <%end%>
        </div>
        <div class="w-100 clr_point_l"></div>
        <div class="mt-3">
            <p class="mb-2 ">タグ一覧</p>
            <div class="card" style="height:155px">
                <div class="card-body px-2 py-0 " style="overflow-y:auto">
                    <div class="tags_update">
                        <%= render 'tags/partial_tag' , tags: @tags%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>