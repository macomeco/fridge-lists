
<div class="card">
    <div class="card-body">
        <p>タグの追加</p>
        <div class="tag-add-form">
            <%= render 'tags/tag_form',tag: @tag%>
        </div>

        <div class="card" style="height:200px">

                <div class="card-body p-1" style="overflow-y:scroll">
    
                    <table class="table table-borderless">
                        <tbody>
                        
                            <% tags.each do |tag|%>
                                <tr class="p-0">
                                    <td class="p-1"><%= link_to tag , :method => :delete, data:{ confirm: tag.name+'を削除しますか？'},class: 'm-0' do %><i class="fa fa-times"></i><% end %></td>
                                    <td class="p-1"><%= tag.name %></td>
                                    <td class="p-0"><div class="text-right tag-edit btn btn-link "><i class="fas fa-pen"></i></div></td>
                                    <div class="tag-edit-form">
                                    <%= render 'tags/tag_form',tag: tag%>   
                                    </div>
                                </tr>
                            <% end %>
                    
                        </tbody>
                    </table>
                
                </div>
            </div>
        </div>
</div>


<script>
    $('.tag-edit-form').hide();//
        $('.tag-edit').on('click',function(){
            $(this).next('.tag-edit-form').slideToggle();
//            $('.tag-edit-form').not($(this).next('.tag-edit-form')).slideUp();
        })

</script>