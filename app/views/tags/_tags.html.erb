<%= content_tag(:div,'',style:'border-color:'+@theme.clr_font ,class:'card mt-1') do %>

    <div class="card-body">
        <p>タグの新規登録</p>
        <div class="tag-add-form">
            <%= render 'tags/tag_form',tag: @tag%>
        </div>
    
        <%= content_tag(:div,'', style: "border-bottom: 2px dotted "+@theme.clr_font,class:"w-100 my-2")%>

        <p>タグ一覧</p>

        <div class="card" style="height:200px">
            <div class="card-body p-1" style="overflow-y:scroll">
                <table class="table table-borderless m-0">
                    <tbody>
                        <% tags.each do |tag|%>
                            <tr class="p-0 my-3">
                                <td class="p-0"><%= link_to tag , :method => :delete, data:{ confirm: tag.name+'を削除しますか？'},class: 'mx-1' ,style:"color:"+@theme.clr_main do %><i class="fa fa-times"></i><% end %></td>
                                <td class="p-0"><%= tag.name %></td>
                                <td class="p-0"><%= content_tag(:div,'', style: 'color:'+@theme.clr_main ,class: 'tag-edit text-right btn btn-link p-0')do %><i class="fas fa-pen fa-sm"></i><%end%></td>
                            </tr>
                            
                            
                            <tr class="p-0 my-3 tag-edit-form">
                                <td colspan="3" class="w-100 px-1 py-2">
                                    <%= form_with(model: tag, local: true)do |f| %>
                                        <div class="input-group">
                                            <%= f.text_field :name, class: 'form-control form-control-sm'%>
                                            <span class="input-group-append">
                                                <%= f.submit 'OK' , class: 'btn btn-default btn-sm',style: 'background-color:'+@theme.clr_sub+';color:'+@theme.clr_font+';border-color:'+@theme.clr_font  %>
                                            </span>
                                        </div>
                                    <%end%>
                                </td>
                            </tr>
                            
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>

    </div>

<%end%>


<script>
$('.tag-edit-form').hide();
$('.tag-edit').on('click',function(){
    if($(this).parent().parent().next('.tag-edit-form').css('display')!='none'){
           $('.tag-edit-form').slideUp();
    }else{
    $(this).parent().parent().next('.tag-edit-form').slideDown();
    $('.tag-edit-form').not($(this).parent().parent().next('.tag-edit-form')).slideUp();
    }
});

</script>